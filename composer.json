{
  "name": "slick/configuration",
  "description": "Slick/Configuration is a simple package that deals with configuration files.",
  "keywords": [
    "slick",
    "configuration",
    "INI",
    "arrays"
  ],
  "homepage": "https://github.com/slickframework/configuration",
  "license": "MIT",
  "authors": [
    {
      "name": "Filipe Silva",
      "email": "silvam.filipe@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpspec/phpspec": "^7.2",
    "squizlabs/php_codesniffer": "^3.1"
  },
  "autoload": {
    "psr-4": {
      "Slick\\Configuration\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Slick\\Tests\\Configuration\\": "tests"
    }
  },
  "version": "v2.0.0",
  "extra": {
    "branch-alias": {
      "dev-master": "1.2-dev",
      "dev-develop": "1.3-dev"
    }
  },
  "scripts": {
    "test": "phpspec run -fdot",
    "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
    "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src"
  },
  "config": {
    "sort-packages": true
  }
}
